{
    "name": "algoritma/php-coding-standards",
    "description": "A usefull PHP Coding Standard for your projects, based on PHPStan, PHP CS Fixer and Rector.",
    "type": "composer-plugin",
    "extra": {
        "class": "Algoritma\\CodingStandards\\Composer\\Plugin"
    },
    "authors": [
        {
            "name": "Algoritma",
            "email": "info@algoritma.it",
            "homepage": "https://algoritma.it/"
        }
    ],
    "license": "GPL-3.0-or-later",
    "keywords": [
        "algoritma",
        "algoritma.it",
        "PHP Coding Standards",
        "PHPStan",
        "PHP CS Fixer",
        "Rector"
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "composer-plugin-api": "^1.1 || ^2.0",
        "friendsofphp/php-cs-fixer": "v3.91.1",
        "nette/neon": "^3.4",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "rector/rector": "^2.0",
        "rector/type-perfect": "^2.0",
        "symfony/console": "^4.0 || ^5.0 || ^6.0 || ^7.0 || ^8.0",
        "symplify/phpstan-rules": "^14.0",
        "ticketswap/phpstan-error-formatter": "^1.1",
        "tomasvotruba/type-coverage": "^2.0",
        "composer/composer": "^1.3.2 || ^2.0"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^2.0",
        "composer/semver": "^3.0",
        "roave/security-advisories": "dev-latest",
        "phpspec/prophecy": "^v1.20",
        "phpspec/prophecy-phpunit": "^v2.3",
        "phpunit/phpunit": "^10.5 || ^11.5 || ^12.0"
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --dry-run --diff --allow-risky yes",
        "cs-fix": "php-cs-fixer fix --diff --allow-risky yes",
        "rector-check": "rector process --dry-run",
        "rector-fix": "rector process",
        "phpstan": "phpstan analyze"
    },
    "autoload": {
        "psr-4": {
            "Algoritma\\CodingStandards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Algoritma\\CodingStandardsTest\\": "tests/"
        }
    }
}
