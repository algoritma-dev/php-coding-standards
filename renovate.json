{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "prConcurrentLimit": 5,
    "enabledManagers": ["composer"],
    "baseBranches": ["master", "1.0"],
    "packageRules": [
        {
            "groupName": "dev-dependencies",
            "matchManagers": ["composer"],
            "matchDepTypes": ["require-dev"],
            "enabled": false
        }
    ]
}